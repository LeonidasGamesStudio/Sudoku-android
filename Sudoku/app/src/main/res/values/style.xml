<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="numberButtons" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <style name="difficultySelectButtons" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">32sp</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="funcButtons" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_weight">1</item>
        <item name="android:padding">2dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="altPencil" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_weight">1</item>
        <item name="android:padding">2dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>